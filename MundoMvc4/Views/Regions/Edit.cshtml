@using MundoMvc4.Globalization
@model Region

@{
    ViewBag.Title = "Edit";
}
@section HeadSection
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
}
<div class="edit-menu-box">
     @Html.ActionLink(GRegions.LinkNews, "Index", "News", new { argument = Model.SysName }, null) |
     @Html.ActionLink(GRegions.LinkGroups, "Index", "Groups", new { argument = Model.SysName }, null) [
     @Html.ActionLink("ru-Ru", "EditLocal", new { argument = Model.SysName, lng = "ru-Ru" })
     @Html.ActionLink("en-US", "EditLocal", new { argument = Model.SysName, lng = "en-US" })
     @Html.ActionLink("pt-Br", "EditLocal", new { argument = Model.SysName, lng = "pt-Br" })]
     @Html.ActionLink(GActions.Delete, "Delete", "Regions", new { argument = Model.SysName }, null)
 </div>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Html.ActionLink(GActions.Details, "Details", new { argument = Model.SysName })</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.SysName)
        <div>@Html.DisplayFor(model=>model.SysName)</div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsActive)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsActive)
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Phone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EMail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EMail)
            @Html.ValidationMessageFor(model => model.EMail)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}


