@model MundoMvc4.Models.Membership.DashboardViewModel
@{
    ViewBag.Title = "DashBoard";
}
@section HeadSection
{
    <link href="@Url.Content("~/Content/sg_main.css")" type="text/css" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/sg_pagination.css")" type="text/css" rel="stylesheet"/>
}
<h2>
    Manage Users and Roles</h2>
<p>
    An easy-to-use management system for Membership Users and Roles based on the ASP.NET
    Membership system.</p>
<div class="fl w48pc mr20">
    <fieldset>
        <legend>Manage Users</legend>
        <p>@Html.ActionLink("Manage Users", "Index", "Membership")
            | @Html.ActionLink("Create User", "CreateUser", "Membership")</p>
        <table>
            <tr>
                <td>
                    Total Users:
                </td>
                <td>@Model.TotalUsers
                </td>
            </tr>
            <tr>
                <td>
                    Users Online:
                </td>
                <td>@Model.TotalUsersOnline
                </td>
            </tr>
        </table>
    </fieldset>
</div>
<div class="fr w48pc">
    <fieldset>
        <legend>Manage Roles</legend>
        <p>@Html.ActionLink("Manage Roles", "Roles", "Membership")</p>
        <table>
            <tr>
                <td>
                    Total Roles:
                </td>
                <td>@Model.TotalRoles
                </td>
            </tr>
            <tr>
                <td>
                </td>
                <td>
                </td>
            </tr>
        </table>
    </fieldset>
</div>
