@using MundoMvc4.Globalization
@model MundoMvc4.DataLayer.Gym

@{
    ViewBag.Title = GGyms.CreateTitle;
}
@section HeadSection
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
}
<h2>@GGyms.CreateTitle</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@GGyms.Legend</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SysName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SysName)
            @Html.ValidationMessageFor(model => model.SysName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubwayStation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubwayStation)
            @Html.ValidationMessageFor(model => model.SubwayStation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsActive)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsActive)
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
        
        <p>
            <input type="submit" value="@GActions.Save" />
        </p>
    </fieldset>
}
