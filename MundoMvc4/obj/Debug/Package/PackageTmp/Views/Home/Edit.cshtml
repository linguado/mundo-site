@using MundoMvc4.Globalization
@model MundoMvc4.DataLayer.DataProviders.HomeModel

@{
    ViewBag.Title = GSections.EditTitle;
}
@section HeadSection
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
}
<h2>@GSections.EditTitle</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Model.Mundo.SysName</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Mundo.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Mundo.Name)
            @Html.ValidationMessageFor(model => model.Mundo.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Mundo.Body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Mundo.Body)
            @Html.ValidationMessageFor(model => model.Mundo.Body)
        </div>
    </fieldset>
    
    <fieldset>
        <legend>@Model.Capoeira.SysName</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Capoeira.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capoeira.Name)
            @Html.ValidationMessageFor(model => model.Capoeira.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Capoeira.Body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Capoeira.Body)
            @Html.ValidationMessageFor(model => model.Capoeira.Body)
        </div>

        @Html.HiddenFor(model => model.Mundo.SysName)
        @Html.HiddenFor(model => model.Mundo.Usage)
        @Html.HiddenFor(model => model.Mundo.LangId)
        @Html.HiddenFor(model => model.Capoeira.SysName)
        @Html.HiddenFor(model => model.Capoeira.Usage)
        @Html.HiddenFor(model => model.Capoeira.LangId)

    </fieldset>
        <p>
            <input type="submit" value="@GActions.Save" />
        </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
