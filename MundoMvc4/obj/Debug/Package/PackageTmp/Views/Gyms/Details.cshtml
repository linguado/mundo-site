@using MundoMvc4.Common
@using MundoMvc4.Globalization
@model GymInfo

@{
    ViewBag.Title = Model.Name;
}

<div class="edit-menu-box">
    @Html.ActionLink(GGyms.Schedule, "ForGym", "Schedule", new { argument = Model.SysName }, null) |
    @if (User.IsInRole(MundoRoles.COACH))
    {
        <text>
            @Html.ActionLink(GActions.Edit, "Edit", "Gyms", new {argument = Model.SysName}, null) |
            @Html.ActionLink(GGyms.EditSchedule, "Edit", "Schedule", new {argument = Model.SysName}, null) |
            @Html.ActionLink("ru-Ru", "EditLocal", new {argument = Model.SysName, lng = "ru-Ru"})
            @Html.ActionLink("en-US", "EditLocal", new {argument = Model.SysName, lng = "en-US"})
            @Html.ActionLink("pt-Br", "EditLocal", new {argument = Model.SysName, lng = "pt-Br"})]
            @Html.ActionLink(GActions.Delete, "Delete", new {argument = Model.SysName, lng = "pt-Br"})]
        </text>
    }
</div>
<h3>@Model.Name</h3>
@Html.Raw(Model.Body)