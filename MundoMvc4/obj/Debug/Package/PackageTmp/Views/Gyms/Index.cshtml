@using MundoMvc4.Common
@using MundoMvc4.Globalization
@model IEnumerable<GymInfo>

@{
    ViewBag.Title = GGyms.IndexTitle;
}

<h2>Gyms</h2>

@foreach (var item in Model)
{
    <div>
        <h4><a href="@Url.Action("Details", "Gyms", new { argument = item.SysName })">@item.Name</a></h4>
        @Html.ActionLink(GGyms.Schedule, "ForGym","Schedule",new{argument=item.SysName},null) [
        @if(User.IsInRole(MundoRoles.COACH))
        {
            <text>
                @Html.ActionLink("Edit", "Edit", new {argument = item.SysName}) |
                @Html.ActionLink("Delete", "Delete", new {argument = item.SysName}) 
            </text>
        }]
        <p>there will be text,image and some description</p>
    </div>
}
